{
  "name": "bipinpaul.com",
  "image": "mcr.microsoft.com/devcontainers/dotnet:10.0-noble",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/copilot-cli:1": {},
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": true,
      "username": "vscode"
    },
     "ghcr.io/iambipinpaul/devcontainer-features/oh-my-posh:1": {
      "theme": "https://raw.githubusercontent.com/iAmBipinPaul/oh-my-posh/main/oh-my-posh.json"
     }
  },
  "containerEnv": {
    "DOTNET_NOLOGO": "true",
    "DOTNET_CLI_TELEMETRY_OPTOUT": "1",
    "DOTNET_GENERATE_ASPNET_CERTIFICATE": "false",
    "DOTNET_SKIP_FIRST_TIME_EXPERIENCE": "true"
  },
  "postCreateCommand": "dotnet restore && dotnet tool install --global dotnet-ef || echo \"dotnet-ef already installed\"",
  "postStartCommand": "dotnet dev-certs https --trust 2>/dev/null || echo \"Dev certs trust skipped (Linux limitation)\"",
  "forwardPorts": [],
  "customizations": {
    "jetbrains": {
      "settings": {},
      "plugins": [
        "com.github.copilot",
        "Key Promoter X",
        "me.rafaelldi.aspire",
        "com.intellij.ml.llm",
        "org.jetbrains.plugins.github"
      ]
    },
    "vscode": {
      "extensions": [
        "ms-dotnettools.csdevkit",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "jetbrains.jetbrains-ai-assistant"
      ]
    }
  },
  "remoteUser": "vscode"
}
