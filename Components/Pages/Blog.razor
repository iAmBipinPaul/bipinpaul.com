@page "/blog"
@page "/blog/{fileName}"
@using System.Globalization
@using BlazorStatic
@using BlazorStatic.Services
@inject BlazorStaticContentService<BlogFrontMatter> blazorStaticContentService


@* No filename -> show latest posts *@
@if (string.IsNullOrWhiteSpace(FileName))
{
    <div class="py-12">
        <!-- Header -->
        <div class="text-center mb-12">
            <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-accent-400/10 border border-accent-400/20 text-accent-400 text-sm font-medium mb-6">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
                </svg>
                @blazorStaticContentService.Posts.Count articles
            </div>
            <h1 class="text-4xl font-extrabold text-foreground sm:text-5xl md:text-6xl mb-4">
                Blog
            </h1>
            <p class="text-lg text-foreground-muted max-w-2xl mx-auto">@WebsiteKeys.BlogLead</p>
        </div>

        <PostsList/>
    </div>
    return;
}

@* Show specific post by filename param *@
@if (post == null)
{
    <div class="py-20 text-center">
        <div class="glass-card max-w-md mx-auto p-8">
            <div class="w-16 h-16 rounded-full bg-error/10 flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-error" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
            </div>
            <h2 class="text-xl font-bold text-foreground mb-2">Post not found</h2>
            <p class="text-foreground-muted mb-6">The article you're looking for doesn't exist or has been moved.</p>
            <a href="/blog" class="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-accent-400/10 text-accent-400 hover:bg-accent-400/20 font-medium transition-all duration-300 border border-accent-400/20">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                </svg>
                Back to Blog
            </a>
        </div>
    </div>
    return;
}

<IndividualPost post="post" FileName="@FileName"></IndividualPost>

@code{
    [Parameter] public string? FileName { get; set; }
    Post<BlogFrontMatter>? post;

    protected override void OnInitialized()
    {
        if (string.IsNullOrWhiteSpace(FileName)) return;
        post = blazorStaticContentService.Posts.FirstOrDefault(x => x.Url == FileName);
    }
}
